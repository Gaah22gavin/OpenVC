.according{
    background-color: #e1eff6;
   
  .row {
      display: flex;
      flex-direction: column;
      flex-wrap: wrap;
      width: 100%;
      padding: 20px;
      margin: 80px auto;
    //   overflow: hidden;
      h2{
          text-align: center;
          font-family: $semi;
          font-size: 20px;
          margin: 10px;
      }
    }
    .left {
      flex: 100%;
      // padding: 20px;
    }
    .right {
      flex: 100%;
      // padding: 20px;
    }
    .accordion {
      width: 100%;
      margin: 0 auto;
      padding: 0;
      overflow: hidden;
      box-shadow: 0px 5px 18px 0px #A0A7C4;
    }
    .accordion li {
      list-style-type: none;
      width: 100%;
      margin: auto;
      padding: 0;
    }
    .accordion-button {
      position: relative;
      display: block;
      margin: 0;
      width: 100%;
      border: none;
      padding: 0.5em;
      background: #e1eff6;
      cursor: pointer;
      h3{
          font-size: 12px;
          font-family: $bold;
          color: black;
      }
      p{
          font-family: $light;
          font-size: 25px;
      }
    }
    .accordion-button:before {
      content: '';
      position: absolute;
      right: 0;
      top: 45%;
      height: 2px;
      width: 20px;
      margin-left:5px;
      background: black;
      transform: rotate(90deg);
      transition: 0.7s ease;
    }
    .accordion-button:after {
      content: '';
      position: absolute;
      right: 0;
      top: 45%;
      height: 2px;
      width: 20px;
      margin-left: 5px;
      background: black;
    }
    .accordion-button.active:after {
      background: black;
    }
    .accordion-button.active:before {
      transform: rotate(-360deg) translateY(-20px);
      opacity: 0;
    }
    .accordion-button.active h2, .accordion-button:focus h2 {
      position: relative;
      color: black;
    }
    .accordion-panel {
      display: none;
      padding: 10px;
      background: white;
      border-right: 1px solid #e1eff6;
      border-bottom: 1px solid #e1eff6;
      border-left: 1px solid #e1eff6;
      overflow: hidden;
    }
        .accordion-panel img {
          display: block;
          max-width: 90%;
          margin: 5px auto;
        }
    

}
